if [ "${1}" == "build" ]; then

    docker-compose build

elif [ "${1}" == "list" ]; then

    echo "--------------------------------------------------------"
    echo " PODS"
    echo "--------------------------------------------------------"
    kubectl get pods -a
    echo ""
    echo "--------------------------------------------------------"
    echo " DEPLOYMENTS"
    echo "--------------------------------------------------------"
    kubectl get deployments
    echo ""
    echo "--------------------------------------------------------"
    echo " SERVICES"
    echo "--------------------------------------------------------"
    kubectl get services
    echo ""
    echo "--------------------------------------------------------"
    echo " REPLICATION CONTROLLERS"
    echo "--------------------------------------------------------"
    kubectl get rc
    echo ""
    echo "--------------------------------------------------------"
    echo " REPLICATION SETS"
    echo "--------------------------------------------------------"
    kubectl get rs
    echo ""

else

    kubectl ${@}

fi
